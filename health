        function findBestMatchKey(query) {
            const foodKeys = Object.keys(foodData);
            // ì •í™•íˆ ì¼ì¹˜í•˜ëŠ” ê²½ìš° ë¨¼ì € ë°˜í™˜
            if (foodData[query]) {
                return query;
            }
            // í¬í•¨ë˜ëŠ” í‚¤ì›Œë“œê°€ ìˆëŠ”ì§€ í™•ì¸
            for (const key of foodKeys) {
                if (query.includes(key)) {
                    return key;
                }
            }
            return null; // ì¼ì¹˜í•˜ëŠ” í‚¤ì›Œë“œê°€ ì—†ëŠ” ê²½ìš°
        }

